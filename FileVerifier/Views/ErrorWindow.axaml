<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AvaloniaDraft.Views.ErrorWindow"
        Title="Error"
        Width="300"
        Height="150"
        CanResize="False"
        SystemDecorations="None"
        WindowStartupLocation="CenterOwner"
        Background="#17171E">
    <StackPanel Margin="10">
        <Path Data="M 0 0 L 20 20 M 20 0 L 0 20" 
              Stroke="Red" 
              StrokeThickness="3" 
              Width="30" 
              Height="30" 
              VerticalAlignment="Center"/>
            
        <TextBlock x:Name="MessageTextBlock"
                   Text=""
                   TextAlignment="Center"
                   Foreground="Red"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"/>
        
        
        <Button Content="OK"
                HorizontalAlignment="Center"
                Margin="10"
                Click="CloseWindow"/>
    </StackPanel>
</Window>
