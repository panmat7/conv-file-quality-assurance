<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaDraft.Views.ReportView">


	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<!-- Top Button Row -->
		<StackPanel Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Spacing="10">
			<Button VerticalAlignment="Center" FontSize="18" Margin="5"
                    Background="#139A43" Foreground="White"
                    BorderBrush="#0DAB76" BorderThickness="2">
				Load current report
			</Button>
			<Button VerticalAlignment="Center" FontSize="18" Margin="5"
                    Background="#139A43" Foreground="White"
                    BorderBrush="#0DAB76" BorderThickness="2"
					Click="LoadJson">
				Load from JSON
			</Button>
		</StackPanel>


		<TextBlock x:Name="ReportSummary" Text=""
				   HorizontalAlignment="Center" Grid.Row="5" Margin="8"
				   FontSize="18" Foreground="White"></TextBlock>

		<!-- Settings Content -->
		<ScrollViewer Grid.Row="1" HorizontalAlignment="Stretch" Margin="22">
			<Grid x:Name="ReportGrid" ColumnDefinitions="5*,5*,80*,10*" Margin="0,10">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>
			</Grid>
		</ScrollViewer>
	</Grid>

</UserControl>
